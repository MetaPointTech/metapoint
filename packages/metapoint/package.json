{
  "name": "metapoint",
  "version": "0.0.3",
  "description": "âš¡Meta first and low-code. Peer-to-Peer typesafe APIs or Channels made easy.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "keywords": [
    "libp2p",
    "channel",
    "zod",
    "low-code",
    "p2p",
    "subscription"
  ],
  "author": "sovlookup <gonorth@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/SOVLOOKUP/metapoint",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SOVLOOKUP/metapoint"
  },
  "bugs": {
    "url": "https://github.com/SOVLOOKUP/metapoint/issues"
  },
  "files": [
    "dist/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest"
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^11.0.1",
    "@libp2p/interface-peer-id": "^2.0.1",
    "@libp2p/mplex": "^7.1.1",
    "@libp2p/websockets": "^5.0.3",
    "@multiformats/multiaddr": "^11.4.0",
    "@syncedstore/core": "^0.4.3",
    "libp2p": "^0.42.2",
    "libp2p-transport": "workspace:*",
    "zod": "^3.20.6"
  },
  "peerDependencies": {
    "yjs": "^13.5.47"
  },
  "devDependencies": {
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "moduleResolution": "node",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "minify": true,
    "shims": true
  }
}
